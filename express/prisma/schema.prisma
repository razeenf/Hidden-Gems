datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  password   String
  username   String // This will come from the email address
  savedPosts Post[]   @relation("SavedPosts", references: [id]) // Relation to saved posts
  userPosts  Post[]   @relation("UserPosts", fields: [id], references: [authorId]) // Relation to user-authored posts
  createdAt  DateTime @default(now())
  Post       Post[]
}

model Post {
  id          Int      @id @default(autoincrement())
  authorId    Int
  author      User     @relation(fields: [authorId], references: [id])
  authorName  String   @map("author->username")
  totalSaves  Int      @default(0)
  title       String //changed from name
  address     String
  city        String
  category    String
  description String
  imageId     String
  mapCoord    String //for the map api
  createdAt   DateTime @default(now())
  users       User[]   @relation("SavedPosts", references: [id]) // Opposite relation field

  User   User? @relation(fields: [userId], references: [id])
  userId Int?
  User   User? @relation(fields: [userId], references: [id])
}
